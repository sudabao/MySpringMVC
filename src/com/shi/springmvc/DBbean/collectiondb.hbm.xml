<?xml version="1.0"?>  
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
	<!-- 1 配置类和表对应   
        class标签  
        name属性：实体类全路径  
        table属性：数据库表名称  
    -->
   <class name="com.shi.springmvc.DBbean.collectiondb" table="collectiondb" schema="mass">
   <composite-id>  
   <key-property name="userid" type="java.lang.String">  
   <column name="userid" />  
   </key-property> 
   <key-property name="contentid" type="java.lang.Integer">  
   <column name="contentid" />  
   </key-property> 
   <key-property name="collectMakeDate" type="java.util.Date">  
   <column name="collectMakeDate" />  
   </key-property>
   <key-property name="collectStatus" type="java.lang.String">  
   <column name="collectStatus" />  
   </key-property>
   </composite-id>  
   </class>
</hibernate-mapping>